{
  "name": "generator-lilly",
  "version": "0.0.0",
  "description":
    "Personal boilerplate for Martin Herweg, Configurable for Laravel, Craft CMS and Vue",
  "homepage": "https://github.com/martinherweg/lilly",
  "author": {
    "name": "Martin Herweg",
    "email": "info@martinherweg.de",
    "url": "https://martinherweg.de"
  },
  "files": ["generators"],
  "main": "generators/index.js",
  "keywords": ["craft", "", "yeoman-generator"],
  "devDependencies": {
    "yeoman-test": "^1.7.0",
    "yeoman-assert": "^3.1.0",
    "nsp": "^2.8.0",
    "eslint": "^4.19.1",
    "prettier": "^1.11.1",
    "husky": "^0.14.3",
    "lint-staged": "^6.1.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-config-xo": "^0.20.1",
    "jest": "^22.0.6"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "command-exists": "^1.2.6",
    "fs-extra": "^5.0.0",
    "progress": "^2.0.0",
    "yeoman-generator": "^2.0.1",
    "yosay": "^2.0.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "scripts": {
    "prepublishOnly": "nsp check",
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"],
    "*.json": ["prettier --write", "git add"]
  },
  "eslintConfig": {
    "extends": ["xo", "prettier"],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": ["prettier"]
  },
  "repository": "git@github.com:martinherweg/lilly.git",
  "license": "Apache-2.0"
}
